<Window x:Class="GravityDamAnalysis.UI.Views.AnalysisResultsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="分析结果" Width="1200" Height="800"
        WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <!-- 自定义样式 -->
        <Style x:Key="ResultCardStyle" TargetType="Border">
            <Setter Property="BorderBrush" Value="LightGray"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="4"/>
        </Style>
        
        <Style x:Key="SafetyFactorStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>
        
        <Style x:Key="StatusIndicatorStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Background" Value="LightBlue"/>
        </Style>
        
        <Style x:Key="HeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- 标题栏 -->
        <Border Grid.Row="0" Background="#2196F3" Padding="16,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="📊" FontSize="24" VerticalAlignment="Center" Margin="0,0,12,0"/>
                    <TextBlock Text="重力坝稳定性分析结果" 
                               FontSize="20" FontWeight="Bold" Foreground="White"
                               VerticalAlignment="Center"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <TextBlock Text="分析时间:" Foreground="White" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBlock Text="{Binding AnalysisDateTime, StringFormat='yyyy-MM-dd HH:mm'}" 
                               Foreground="White" VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- 主要内容区域 -->
        <TabControl Grid.Row="1" Margin="16">
            <!-- 概览标签页 -->
            <TabItem Header="概览">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <Grid Margin="16">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- 安全系数概览 -->
                        <Border Grid.Row="0" Style="{StaticResource ResultCardStyle}">
                            <StackPanel>
                                <TextBlock Text="安全系数概览" Style="{StaticResource HeaderStyle}"/>
                                
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <!-- 抗滑稳定 -->
                                    <Border Grid.Column="0" Style="{StaticResource StatusIndicatorStyle}">
                                        <StackPanel>
                                            <TextBlock Text="抗滑稳定" HorizontalAlignment="Center"/>
                                            <TextBlock Text="{Binding SlidingSafetyFactor}" 
                                                       Style="{StaticResource SafetyFactorStyle}"/>
                                            <TextBlock Text="{Binding SlidingStatus}" HorizontalAlignment="Center"/>
                                        </StackPanel>
                                    </Border>
                                    
                                    <!-- 抗倾覆稳定 -->
                                    <Border Grid.Column="1" Style="{StaticResource StatusIndicatorStyle}">
                                        <StackPanel>
                                            <TextBlock Text="抗倾覆稳定" HorizontalAlignment="Center"/>
                                            <TextBlock Text="{Binding OverturningSafetyFactor}" 
                                                       Style="{StaticResource SafetyFactorStyle}"/>
                                            <TextBlock Text="{Binding OverturningStatus}" HorizontalAlignment="Center"/>
                                        </StackPanel>
                                    </Border>
                                    
                                    <!-- 抗压强度 -->
                                    <Border Grid.Column="2" Style="{StaticResource StatusIndicatorStyle}">
                                        <StackPanel>
                                            <TextBlock Text="抗压强度" HorizontalAlignment="Center"/>
                                            <TextBlock Text="{Binding CompressionSafetyFactor}" 
                                                       Style="{StaticResource SafetyFactorStyle}"/>
                                            <TextBlock Text="{Binding CompressionStatus}" HorizontalAlignment="Center"/>
                                        </StackPanel>
                                    </Border>
                                </Grid>
                            </StackPanel>
                        </Border>
                        
                        <!-- 荷载分析 -->
                        <Border Grid.Row="1" Style="{StaticResource ResultCardStyle}">
                            <StackPanel>
                                <TextBlock Text="荷载分析" Style="{StaticResource HeaderStyle}"/>
                                
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <StackPanel Grid.Column="0" Margin="8">
                                        <TextBlock Text="自重 (kN)"/>
                                        <TextBlock Text="{Binding SelfWeight}" 
                                                   FontWeight="SemiBold"/>
                                    </StackPanel>
                                    
                                    <StackPanel Grid.Column="1" Margin="8">
                                        <TextBlock Text="水压力 (kN)"/>
                                        <TextBlock Text="{Binding WaterPressure}" 
                                                   FontWeight="SemiBold"/>
                                    </StackPanel>
                                    
                                    <StackPanel Grid.Column="2" Margin="8">
                                        <TextBlock Text="扬压力 (kN)"/>
                                        <TextBlock Text="{Binding UpliftPressure}" 
                                                   FontWeight="SemiBold"/>
                                    </StackPanel>
                                    
                                    <StackPanel Grid.Column="3" Margin="8">
                                        <TextBlock Text="地震力 (kN)"/>
                                        <TextBlock Text="{Binding SeismicForce}" 
                                                   FontWeight="SemiBold"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Border>
                        
                        <!-- 应力分析 -->
                        <Border Grid.Row="2" Style="{StaticResource ResultCardStyle}">
                            <StackPanel>
                                <TextBlock Text="应力分析" Style="{StaticResource HeaderStyle}"/>
                                
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <StackPanel Grid.Column="0" Margin="8">
                                        <TextBlock Text="最大压应力 (MPa)"/>
                                        <TextBlock Text="{Binding MaxCompressiveStress}" 
                                                   FontWeight="SemiBold"/>
                                    </StackPanel>
                                    
                                    <StackPanel Grid.Column="1" Margin="8">
                                        <TextBlock Text="最大拉应力 (MPa)"/>
                                        <TextBlock Text="{Binding MaxTensileStress}" 
                                                   FontWeight="SemiBold"/>
                                    </StackPanel>
                                    
                                    <StackPanel Grid.Column="2" Margin="8">
                                        <TextBlock Text="主应力 (MPa)"/>
                                        <TextBlock Text="{Binding PrincipalStress}" 
                                                   FontWeight="SemiBold"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Border>
                    </Grid>
                </ScrollViewer>
            </TabItem>
            
            <!-- 详细结果标签页 -->
            <TabItem Header="详细结果">
                <Grid Margin="16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- 结果图表 -->
                    <Border Grid.Column="0" Style="{StaticResource ResultCardStyle}">
                        <StackPanel>
                            <TextBlock Text="应力分布图" Style="{StaticResource HeaderStyle}"/>
                            
                            <Border BorderBrush="LightGray" BorderThickness="1" Height="400">
                                <Canvas x:Name="StressContourCanvas" Background="White">
                                    <!-- 这里将通过代码绘制应力云图 -->
                                    <TextBlock Canvas.Left="200" Canvas.Top="200" 
                                               Text="应力云图将在这里显示" 
                                               HorizontalAlignment="Center" VerticalAlignment="Center"
                                               Foreground="Gray"/>
                                </Canvas>
                            </Border>
                        </StackPanel>
                    </Border>
                    
                    <!-- 详细数据 -->
                    <Border Grid.Column="1" Style="{StaticResource ResultCardStyle}">
                        <StackPanel>
                            <TextBlock Text="详细数据" Style="{StaticResource HeaderStyle}"/>
                            
                            <ScrollViewer VerticalScrollBarVisibility="Auto" Height="400">
                                <ItemsControl ItemsSource="{Binding DetailedResults}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border BorderBrush="LightGray" BorderThickness="0,0,0,1" Padding="0,8">
                                                <StackPanel>
                                                    <TextBlock Text="{Binding Name}" FontWeight="SemiBold"/>
                                                    <TextBlock Text="{Binding Value}"/>
                                                    <TextBlock Text="{Binding Unit}" Foreground="Gray"/>
                                                </StackPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </StackPanel>
                    </Border>
                </Grid>
            </TabItem>
            
            <!-- 报告标签页 -->
            <TabItem Header="分析报告">
                <Grid Margin="16">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- 报告工具栏 -->
                    <Border Grid.Row="0" Background="#F5F5F5" Padding="12,8">
                        <StackPanel Orientation="Horizontal">
                            <Button Content="生成PDF报告" 
                                    Command="{Binding GeneratePdfReportCommand}"
                                    Margin="0,0,8,0" Padding="12,6"/>
                            
                            <Button Content="导出Excel" 
                                    Command="{Binding ExportToExcelCommand}"
                                    Margin="0,0,8,0" Padding="12,6"/>
                            
                            <Button Content="打印报告" 
                                    Command="{Binding PrintReportCommand}"
                                    Padding="12,6"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- 报告内容 -->
                    <Border Grid.Row="1" Style="{StaticResource ResultCardStyle}">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <RichTextBox x:Name="ReportRichTextBox" 
                                         IsReadOnly="True"
                                         Background="Transparent"
                                         BorderThickness="0"
                                         Padding="0">
                                <!-- 报告内容将通过代码动态生成 -->
                            </RichTextBox>
                        </ScrollViewer>
                    </Border>
                </Grid>
            </TabItem>
        </TabControl>
        
        <!-- 底部按钮 -->
        <Border Grid.Row="2" Background="#F5F5F5" Padding="16,8">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="保存结果" 
                        Command="{Binding SaveResultsCommand}"
                        Margin="0,0,8,0" Padding="12,6"/>
                
                <Button Content="关闭" 
                        Command="{Binding CloseCommand}"
                        Padding="12,6"/>
            </StackPanel>
        </Border>
    </Grid>
</Window> 