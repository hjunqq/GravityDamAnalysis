<Window x:Class="GravityDamAnalysis.UI.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="重力坝稳定性分析工具" Height="600" Width="800"
        WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
        
        <Style x:Key="SectionBorderStyle" TargetType="Border">
            <Setter Property="BorderBrush" Value="LightGray"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="CornerRadius" Value="5"/>
        </Style>
    </Window.Resources>
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- 标题 -->
        <TextBlock Grid.Row="0" Text="重力坝稳定性分析工具" 
                   Style="{StaticResource HeaderTextStyle}"
                   HorizontalAlignment="Center" FontSize="20"/>
        
        <!-- 坝体信息区域 -->
        <Border Grid.Row="1" Style="{StaticResource SectionBorderStyle}">
            <StackPanel>
                <TextBlock Text="坝体信息" Style="{StaticResource HeaderTextStyle}"/>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="坝体名称:" Width="80" Margin="0,0,10,5"/>
                    <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding SelectedDam.Name, UpdateSourceTrigger=PropertyChanged}" 
                             Margin="0,0,0,5" IsReadOnly="True"/>
                    
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="体积 (m³):" Margin="0,0,10,5"/>
                    <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding SelectedDam.Geometry.Volume, StringFormat=F2}" 
                             Margin="0,0,0,5" IsReadOnly="True"/>
                    
                    <TextBlock Grid.Row="2" Grid.Column="0" Text="材料类型:" Margin="0,0,10,5"/>
                    <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding SelectedDam.MaterialProperties.Name}" 
                             Margin="0,0,0,5" IsReadOnly="True"/>
                    
                    <TextBlock Grid.Row="3" Grid.Column="0" Text="状态:" Margin="0,0,10,5"/>
                    <TextBlock Grid.Row="3" Grid.Column="1" Margin="0,0,0,5">
                        <TextBlock.Text>
                            <MultiBinding StringFormat="{}{0}">
                                <Binding Path="HasSelectedDam"/>
                                <Binding Path="IsAnalysisRunning"/>
                            </MultiBinding>
                        </TextBlock.Text>
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding HasSelectedDam}" Value="False">
                                        <Setter Property="Text" Value="未选择坝体"/>
                                        <Setter Property="Foreground" Value="Gray"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding IsAnalysisRunning}" Value="True">
                                        <Setter Property="Text" Value="分析中..."/>
                                        <Setter Property="Foreground" Value="Orange"/>
                                    </DataTrigger>
                                    <MultiDataTrigger>
                                        <MultiDataTrigger.Conditions>
                                            <Condition Binding="{Binding HasSelectedDam}" Value="True"/>
                                            <Condition Binding="{Binding IsAnalysisRunning}" Value="False"/>
                                        </MultiDataTrigger.Conditions>
                                        <Setter Property="Text" Value="就绪"/>
                                        <Setter Property="Foreground" Value="Green"/>
                                    </MultiDataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>
            </StackPanel>
        </Border>
        
        <!-- 分析结果区域 -->
        <Border Grid.Row="2" Style="{StaticResource SectionBorderStyle}">
            <DockPanel>
                <TextBlock DockPanel.Dock="Top" Text="分析结果" Style="{StaticResource HeaderTextStyle}"/>
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                    <TextBox Text="{Binding AnalysisResults}" IsReadOnly="True" 
                             TextWrapping="Wrap" AcceptsReturn="True"
                             Background="Transparent" BorderThickness="0"
                             FontFamily="Consolas" FontSize="12"/>
                </ScrollViewer>
            </DockPanel>
        </Border>
        
        <!-- 操作按钮区域 -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="开始分析" Command="{Binding StartAnalysisCommand}" 
                    Width="100" Height="30" Margin="0,0,10,0"/>
            <Button Content="清除结果" Command="{Binding ClearResultsCommand}" 
                    Width="100" Height="30"/>
        </StackPanel>
    </Grid>
</Window> 