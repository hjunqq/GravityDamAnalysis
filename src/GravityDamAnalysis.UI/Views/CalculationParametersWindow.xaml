<Window x:Class="GravityDamAnalysis.UI.Views.CalculationParametersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="计算参数设置" Width="1000" Height="700"
        WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <!-- 自定义样式 -->
        <Style x:Key="ParameterGroupStyle" TargetType="GroupBox">
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="BorderBrush" Value="LightGray"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
        
        <Style x:Key="ParameterRowStyle" TargetType="Grid">
            <Setter Property="Margin" Value="0,4"/>
        </Style>
        
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
            <Setter Property="MinWidth" Value="120"/>
        </Style>
        
        <Style x:Key="InputStyle" TargetType="TextBox">
            <Setter Property="Height" Value="24"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        
        <Style x:Key="ComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Height" Value="24"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        
        <Style x:Key="CheckBoxStyle" TargetType="CheckBox">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,4"/>
        </Style>
        
        <Style x:Key="HeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- 标题栏 -->
        <Border Grid.Row="0" Background="#2196F3" Padding="16,8">
            <TextBlock Text="⚙️ 计算参数设置" 
                       FontSize="20" FontWeight="Bold" Foreground="White"/>
        </Border>
        
        <!-- 主要内容区域 -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="16">
                
                <!-- 基本参数 -->
                <GroupBox Header="基本参数" Style="{StaticResource ParameterGroupStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- 坝体材料 -->
                        <Grid Grid.Row="0" Style="{StaticResource ParameterRowStyle}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0" Text="坝体材料:" Style="{StaticResource LabelStyle}"/>
                            <ComboBox Grid.Column="1" Style="{StaticResource ComboBoxStyle}"
                                      ItemsSource="{Binding MaterialTypes}"
                                      SelectedItem="{Binding SelectedMaterial}"/>
                            
                            <TextBlock Grid.Column="2" Text="容重 (kN/m³):" Style="{StaticResource LabelStyle}"/>
                            <TextBox Grid.Column="3" Style="{StaticResource InputStyle}"
                                     Text="{Binding UnitWeight}"/>
                        </Grid>
                        
                        <!-- 混凝土强度 -->
                        <Grid Grid.Row="1" Style="{StaticResource ParameterRowStyle}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0" Text="混凝土强度等级:" Style="{StaticResource LabelStyle}"/>
                            <ComboBox Grid.Column="1" Style="{StaticResource ComboBoxStyle}"
                                      ItemsSource="{Binding ConcreteGrades}"
                                      SelectedItem="{Binding SelectedConcreteGrade}"/>
                            
                            <TextBlock Grid.Column="2" Text="抗压强度 (MPa):" Style="{StaticResource LabelStyle}"/>
                            <TextBox Grid.Column="3" Style="{StaticResource InputStyle}"
                                     Text="{Binding CompressiveStrength}"/>
                        </Grid>
                        
                        <!-- 摩擦系数 -->
                        <Grid Grid.Row="2" Style="{StaticResource ParameterRowStyle}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0" Text="基础摩擦系数:" Style="{StaticResource LabelStyle}"/>
                            <TextBox Grid.Column="1" Style="{StaticResource InputStyle}"
                                     Text="{Binding FrictionCoefficient}"/>
                            
                            <TextBlock Grid.Column="2" Text="凝聚力 (kPa):" Style="{StaticResource LabelStyle}"/>
                            <TextBox Grid.Column="3" Style="{StaticResource InputStyle}"
                                     Text="{Binding Cohesion}"/>
                        </Grid>
                    </Grid>
                </GroupBox>
                
                <!-- 荷载参数 -->
                <GroupBox Header="荷载参数" Style="{StaticResource ParameterGroupStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- 水位参数 -->
                        <Grid Grid.Row="0" Style="{StaticResource ParameterRowStyle}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0" Text="上游水位 (m):" Style="{StaticResource LabelStyle}"/>
                            <TextBox Grid.Column="1" Style="{StaticResource InputStyle}"
                                     Text="{Binding UpstreamWaterLevel}"/>
                            
                            <TextBlock Grid.Column="2" Text="下游水位 (m):" Style="{StaticResource LabelStyle}"/>
                            <TextBox Grid.Column="3" Style="{StaticResource InputStyle}"
                                     Text="{Binding DownstreamWaterLevel}"/>
                        </Grid>
                        
                        <!-- 扬压力参数 -->
                        <Grid Grid.Row="1" Style="{StaticResource ParameterRowStyle}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0" Text="扬压力系数:" Style="{StaticResource LabelStyle}"/>
                            <TextBox Grid.Column="1" Style="{StaticResource InputStyle}"
                                     Text="{Binding UpliftCoefficient}"/>
                            
                            <TextBlock Grid.Column="2" Text="排水效果系数:" Style="{StaticResource LabelStyle}"/>
                            <TextBox Grid.Column="3" Style="{StaticResource InputStyle}"
                                     Text="{Binding DrainageEffectiveness}"/>
                        </Grid>
                        
                        <!-- 地震参数 -->
                        <Grid Grid.Row="2" Style="{StaticResource ParameterRowStyle}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0" Text="地震烈度:" Style="{StaticResource LabelStyle}"/>
                            <ComboBox Grid.Column="1" Style="{StaticResource ComboBoxStyle}"
                                      ItemsSource="{Binding SeismicIntensities}"
                                      SelectedItem="{Binding SelectedSeismicIntensity}"/>
                            
                            <TextBlock Grid.Column="2" Text="地震系数:" Style="{StaticResource LabelStyle}"/>
                            <TextBox Grid.Column="3" Style="{StaticResource InputStyle}"
                                     Text="{Binding SeismicCoefficient}"/>
                        </Grid>
                    </Grid>
                </GroupBox>
                
                <!-- 安全系数 -->
                <GroupBox Header="安全系数要求" Style="{StaticResource ParameterGroupStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- 抗滑稳定 -->
                        <Grid Grid.Row="0" Style="{StaticResource ParameterRowStyle}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0" Text="抗滑稳定安全系数:" Style="{StaticResource LabelStyle}"/>
                            <TextBox Grid.Column="1" Style="{StaticResource InputStyle}"
                                     Text="{Binding SlidingSafetyFactor}"/>
                            
                            <TextBlock Grid.Column="2" Text="抗倾覆安全系数:" Style="{StaticResource LabelStyle}"/>
                            <TextBox Grid.Column="3" Style="{StaticResource InputStyle}"
                                     Text="{Binding OverturningSafetyFactor}"/>
                        </Grid>
                        
                        <!-- 应力控制 -->
                        <Grid Grid.Row="1" Style="{StaticResource ParameterRowStyle}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0" Text="允许压应力 (MPa):" Style="{StaticResource LabelStyle}"/>
                            <TextBox Grid.Column="1" Style="{StaticResource InputStyle}"
                                     Text="{Binding AllowableCompressiveStress}"/>
                            
                            <TextBlock Grid.Column="2" Text="允许拉应力 (MPa):" Style="{StaticResource LabelStyle}"/>
                            <TextBox Grid.Column="3" Style="{StaticResource InputStyle}"
                                     Text="{Binding AllowableTensileStress}"/>
                        </Grid>
                        
                        <!-- 特殊工况 -->
                        <Grid Grid.Row="2" Style="{StaticResource ParameterRowStyle}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0" Text="特殊工况安全系数:" Style="{StaticResource LabelStyle}"/>
                            <TextBox Grid.Column="1" Style="{StaticResource InputStyle}"
                                     Text="{Binding SpecialConditionSafetyFactor}"/>
                        </Grid>
                    </Grid>
                </GroupBox>
                
                <!-- 计算选项 -->
                <GroupBox Header="计算选项" Style="{StaticResource ParameterGroupStyle}">
                    <StackPanel>
                        <CheckBox Content="考虑地震荷载" 
                                  IsChecked="{Binding ConsiderSeismicLoad}"
                                  Style="{StaticResource CheckBoxStyle}"/>
                        
                        <CheckBox Content="考虑温度应力" 
                                  IsChecked="{Binding ConsiderThermalStress}"
                                  Style="{StaticResource CheckBoxStyle}"/>
                        
                        <CheckBox Content="考虑施工荷载" 
                                  IsChecked="{Binding ConsiderConstructionLoad}"
                                  Style="{StaticResource CheckBoxStyle}"/>
                        
                        <CheckBox Content="考虑冰压力" 
                                  IsChecked="{Binding ConsiderIcePressure}"
                                  Style="{StaticResource CheckBoxStyle}"/>
                        
                        <CheckBox Content="考虑波浪压力" 
                                  IsChecked="{Binding ConsiderWavePressure}"
                                  Style="{StaticResource CheckBoxStyle}"/>
                        
                        <CheckBox Content="考虑泥沙压力" 
                                  IsChecked="{Binding ConsiderSedimentPressure}"
                                  Style="{StaticResource CheckBoxStyle}"/>
                    </StackPanel>
                </GroupBox>
                
                <!-- 输出选项 -->
                <GroupBox Header="输出选项" Style="{StaticResource ParameterGroupStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <Grid Grid.Row="0" Style="{StaticResource ParameterRowStyle}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0" Text="计算精度:" Style="{StaticResource LabelStyle}"/>
                            <ComboBox Grid.Column="1" Style="{StaticResource ComboBoxStyle}"
                                      ItemsSource="{Binding CalculationPrecisions}"
                                      SelectedItem="{Binding SelectedPrecision}"/>
                        </Grid>
                        
                        <Grid Grid.Row="1" Style="{StaticResource ParameterRowStyle}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0" Text="输出格式:" Style="{StaticResource LabelStyle}"/>
                            <ComboBox Grid.Column="1" Style="{StaticResource ComboBoxStyle}"
                                      ItemsSource="{Binding OutputFormats}"
                                      SelectedItem="{Binding SelectedOutputFormat}"/>
                        </Grid>
                    </Grid>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>
        
        <!-- 底部按钮 -->
        <Border Grid.Row="2" Background="#F5F5F5" Padding="16,8">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="重置默认值" 
                        Command="{Binding ResetToDefaultsCommand}"
                        Margin="0,0,8,0" Padding="12,6"/>
                
                <Button Content="保存参数" 
                        Command="{Binding SaveParametersCommand}"
                        Margin="0,0,8,0" Padding="12,6"/>
                
                <Button Content="开始计算" 
                        Command="{Binding StartCalculationCommand}"
                        Background="#4CAF50" Foreground="White"
                        Padding="12,6"/>
                
                <Button Content="取消" 
                        Command="{Binding CancelCommand}"
                        Margin="8,0,0,0" Padding="12,6"/>
            </StackPanel>
        </Border>
    </Grid>
</Window> 