<Window x:Class="GravityDamAnalysis.UI.Views.SimpleTestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="简单测试窗口" Width="400" Height="300"
        WindowStartupLocation="CenterScreen">
    
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="UI编译测试" 
                       FontSize="20" FontWeight="Bold" 
                       HorizontalAlignment="Center" Margin="0,0,0,20"/>
            
            <Border BorderBrush="Gray" BorderThickness="1" 
                    Background="LightBlue" Padding="16" Margin="0,0,0,16">
                <TextBlock Text="这是一个简单的测试窗口" 
                           HorizontalAlignment="Center"/>
            </Border>
            
            <Button Content="测试按钮" 
                    Width="100" Height="30" 
                    HorizontalAlignment="Center"/>
            
            <TextBlock Text="编译成功！" 
                       FontSize="16" FontWeight="Bold" Foreground="Green"
                       HorizontalAlignment="Center" Margin="0,20,0,0"/>
        </StackPanel>
    </Grid>
</Window> 